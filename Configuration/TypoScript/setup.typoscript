@import 'EXT:headless/Configuration/TypoScript/endpoints/records.typoscript'
@import 'EXT:headless/Configuration/TypoScript/endpoints/image.typoscript'

# Include data configuration
@import 'EXT:headless/Configuration/TypoScript/setup/pages.typoscript'
@import 'EXT:headless/Configuration/TypoScript/setup/content.typoscript'
