# Some more setup
plugin.tx_headless_api {
  settings {
    rendering {
      tt_content {
        news_data {
          matching {
            CType = list
            list_type = news_pi1
          }
          renderer = Lfda\Headless\Renderer\NewsRenderer
        }
      }
    }
  }
}
