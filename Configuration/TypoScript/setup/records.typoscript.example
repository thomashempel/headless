plugin.tx_monkeyhead_api {
  settings {

    records {

      allowed {
        newstag = tx_news_domain_model_tag
        news = tx_news_domain_model_news
      }

      selection {
        tx_news_domain_model_news {
          sys_language_uid {
            value = 0
            type = int
          }
        }
      }

      rendering {
        tx_news_domain_model_news {
          provider = Lfda\Monkeyhead\Adaptors\News\NewsProvider
          renderer = Lfda\Monkeyhead\Adaptors\News\NewsRenderer
        }
      }

      mapping {

        tx_news_domain_model_tag {
          uid {
            type = int
          }
          title {
            type = string
          }
        }

        tx_news_domain_model_news {
          uid {
            type = int
          }
          title {
            type = string
          }
          teaser {
            type = string
          }
          bodytext {
            type = string
          }
        }

      }
    }

  }
}
